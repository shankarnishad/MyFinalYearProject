<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context="com.example.nishad.shome.MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <Switch
        android:id="@+id/switch8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:text="light 2"
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch4" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:text="light 1"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/switch6"
        app:layout_constraintTop_toBottomOf="@+id/switch3" />

    <Switch
        android:onClick="clk1"
        android:id="@+id/switch1"
        android:textSize="25dp"
        android:text="AC"
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusedByDefault="false"
        android:layout_marginRight="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="97dp"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintRight_toLeftOf="@+id/switch2" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:id="@+id/switch2"
        android:onClick="clk2"
        android:text="fan"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="97dp"
        android:layout_marginRight="22dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:background="@drawable/shape"
        android:text="Lcd"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/switch4"
        android:layout_marginRight="7dp"
        app:layout_constraintHorizontal_bias="0.142" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:id="@+id/switch4"
        android:onClick="clk3"
        android:text="lamp"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/switch2"
        android:layout_marginRight="19dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:id="@+id/switch5"
        android:text="light 1"
        android:textSize="25dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/switch6"
        android:layout_marginRight="7dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/switch7" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:id="@+id/switch6"
        android:text="light 2"
        android:textSize="25dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/switch8" />


</android.support.constraint.ConstraintLayout>
